<div id="container">

<h2>Eat-Da-Burger!</h2>

<img src="../public/assets/images/burger.jpg" alt="burger">
<br>

<div id="notEaten">
<h4 >Burgers not eaten</h4>
<ul>
  {{#each burgers}}
    {{#unless devoured}}
      
    {{/unless}}
     <button data-id="{{this.id}}" class="delburger">Delete</button>
  {{/each}}
</ul>
</div>

<div id="devoured">
<h4 >Burgers devoured</h4>

<ul>
  {{#each burgers}}
    {{#if devoured}}
      
    {{/if}}
  {{/each}}
</ul>
</div>

<form class="create-form">

  <div class="form-group" >
    <label for="burger"></label>
    <textarea id="burger" name="quote" rows="5" cols="45"></textarea>
  </div>

  <button type="submit" class="btn btn-primary">Submit</button>
  <h3>Enter a burger you want to eat and click the Submit button.</h3>
</form>
</div>