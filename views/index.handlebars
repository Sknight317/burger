<div id="container">

<h2>Eat-Da-Burger!</h2>

<img src="../public/assets/images/burger.jpg" alt="burger">
<br>

<div id="notEaten">
<h4 >Burgers not eaten</h4>
<ul>
  {{#each burgers}}
    {{#unless devoured}}
      <p><span class="label">ID:</span> {{this.id}}</p>
      <p><span class="label">Burger:</span> {{this.burger_name}}</p>
      <button data-id="{{this.id}}" data-burg="{{this.burger_name}}" class="delburger">Devour</button>
    {{/unless}}
     
  {{/each}}
</ul>
</div>

<div id="devoured">
<h4 >Burgers devoured</h4>

<ul>
  {{#each burgers}}
    {{#if devoured}}
    <p><span class="label">ID:</span> {{this.id}}</p>
    <p><span class="label">Burger:</span> {{this.burger_name}}</p>
    {{/if}}
  {{/each}}
</ul>
</div>

<form class="create-form">

  <div class="form-group" >
    <label for="burger"></label>
    <textarea id="burger" name="burger" rows="5" cols="45"></textarea>
  </div>

  <button type="submit" class="btn btn-primary">Submit</button>
  <h3>Enter a burger you want to eat and click the Submit button.</h3>
</form>
</div>